<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.eldar.srm.SRM_Main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GERMAN WORD"
        android:id="@+id/textViewPrimaryLanguage"
        android:textColor="#558b2f"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@+id/textViewCategory"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/space" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/Fail"
        android:id="@+id/buttonFail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#b71c1c"
        android:textSize="30sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/Keep"
        android:id="@+id/buttonKeep"
        android:layout_alignTop="@+id/buttonFail"
        android:layout_centerHorizontal="true"
        android:enabled="true"
        android:visibility="visible"
        android:textSize="30sp"
        android:textColor="#f9a825" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/Good"
        android:id="@+id/buttonGood"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textSize="27sp"
        android:textColor="#558b2f" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="English Word\nRussian Word\nDutch Word"
        android:id="@+id/textViewTranslations"
        android:layout_below="@+id/space"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#f9a825"
        android:textSize="25sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewPrimaryLanguage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewTranslations"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comments"
        android:id="@+id/textViewComments"
        android:layout_below="@+id/space2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/space2"
        android:textColor="#f9a825"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WordCategory"
        android:id="@+id/textViewCategory"
        android:textColor="#558b2f"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textViewPrimaryLanguage" />
</RelativeLayout>
